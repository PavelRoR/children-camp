.importants-subtitle
	font-size: 25px
	font-family: FB
	font-weight: bold
	margin 40px 0 25px
	color MO
.importants-item
	background-color #fff
	border-radius: 10px;
	box-shadow: 0px 1px 44.16px 1.84px rgba(0, 0, 0, 0.3);
	width 100%
	max-width: 371px;
	margin 200px auto 45px
	padding 90px 40px 40px
	position relative
	text-align center
	min-height 479px
	&-title
		position: absolute
		border-radius: 50%
		width 255px
		height 255px
		top: -190px
		left 0
		right 0
		margin 0 auto
		color #fff
		padding 160px 0 0
		font-size: 18px
		font-family: FB
		font-weight: bold
		background-image url(../img/icons/sector.png)
		background-repeat no-repeat
		background-position: top right
		background-size 128px
		span
			display block
			&:first-child
				font-size: 50px
				line-height: 40px
		&-1
			background-color: #2DE23E
			box-shadow: 0 1px 24px 7px rgba(#2DE23E,.5)
		&-2
			background-color: #FF9E1E
			box-shadow: 0 1px 24px 7px rgba(#FF9E1E,.5)
		&-3
			background-color: #FF4242
			box-shadow: 0 1px 24px 7px rgba(#FF4242,.5)
	&-subtitle
		font-size: 20px
		font-family: FB
		font-weight: bold
		color #84e150
		min-height 86px
		margin-bottom: 35px