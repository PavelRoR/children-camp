#authors
	padding 60px 0 0
	overflow hidden
.author-container
	background-color #fff
	border-radius: 10px;
	box-shadow: 0px 1px 44.16px 1.84px rgba(0, 0, 0, 0.3);
	width 100%
	max-width: 753px;
	padding 40px
	position relative
	margin-bottom: 50px
	&-name
		font-size: 32px
		font-family: FB
		font-weight: bold
		margin-bottom: 35px
		color #330e0b
		small
			display block
			font-size: 20px
			font-family: F
			font-weight: normal
	&-subtitle
		font-size: 20px
		font-family: FB
		font-weight: bold
.general-list-2-author-container
	margin-bottom: 25px
.author-img
	position relative
	&:before
		content: ''
		display block
		border-radius: 10px;
		width: 553px;
		height: 654px;
		background-color: #2DE23E
		position absolute
		top 50px
		left -150px
		z-index -1
		img
			position relative
			z-index 20
	&-igor
		&:before
			left auto
			right -150px
			top -60px