#waits
	padding 90px 0
	background-image url(../img/backs/waits.png)
	background-repeat no-repeat
	background-position: center
.waits-item
	width 100%
	max-width 577px
	margin 0 auto 50px
	background-repeat no-repeat
	background-position: top center
	background-size: auto 334px
	padding 334px 0 0
	&-1
		background-image url(../img/images/waits-1.png)
		position relative
		&:before
			content ''
			display block
			position absolute
			left 30px
			bottom: -120px
			width 252px
			height 89px
			background-image url(../img/icons/waves-white.png)
			background-repeat no-repeat
			background-position: center
			background-size contain
	&-2
		background-image url(../img/images/waits-2.png)
	&-container
		background-color #fff
		padding 40px
		border-radius: 10px;
		box-shadow: 0px 1px 44.16px 1.84px rgba(0, 0, 0, 0.3);
		&-title
			font-size: 24px
			font-family: FB
			font-weight: bold
			margin-bottom: 30px