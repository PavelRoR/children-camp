@media screen and (min-width 1900px)
	#waits
		background-size: 100% 100%
@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	#get
		.row
			width 1170px
			margin 0 auto
	#last
		max-width 1400px
@media screen and (max-width 1199px)
	.author-img-ilya
		img
			position relative
			left -150px
			bottom: -60px
	#last
		max-width none
		margin-bottom: 0
		border-radius: 0
@media screen and (max-width 991px)
	#main
		padding: 0 0 40px
		.container
			&:before
				left -200px
			&:after
				right -200px
	#features
		padding 90px 0 70px
	.general-list-features
		margin-left: 0
	.general-list-get-1 li
		text-align: left 
		padding 0 0 0 60px
		margin-right: 0
		&:before
			right 0
			left 0
	.general-list-get-2 li
		margin-left: 0
	.author-img
		img
			display block
			margin 0 auto
			width 100%
		max-width 560px
	.author-img-ilya img
		left auto
		bottom: auto
	#get
		padding 500px 0 0
		background-position: top center
	#plan
		padding-bottom: 0
@media screen and (max-width 767px)
	header
		margin-bottom: 15px
	.header-logo
		float: none
		margin 0 auto 5px
		display block
	.contacts
		float: none
		text-align center
	.contact
		line-height: 1
		display inline-block
	.main-title
		font-size: 38px
	.main-subtitle
		max-width none
	#about
		padding 40px 0
	.about-text
		margin-bottom: 20px
	.general-title
		font-size: 28px
		text-align center
	.general-list-2 li:last-child
		margin-bottom: 10px
	#waits
		padding: 40px 0
	.general-list-2-img:before
		display none
	.modal
		padding 30px
	.packet-2
		margin-top: 290px
	.last-title
		font-size: 40px
	.last-text
		font-size: 26px
		margin 15px 0 20px
@media screen and (max-width 485px)
	#main
		padding: 0 0 30px
		.container
			&:before
				left -220px
			&:after
				right -220px
